{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

<div class="site-wrapper" {{#if @blog.cover_image}}
style="background-image: url({{@blog.cover_image}});
  background-attachment: fixed;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
"{{/if}}>
  <div class="site-wrapper" {{#if @blog.cover_image}}style="background: rgba(12, 12, 12, 0.5);"{{/if}}>

  {{!-- The big featured header, it uses blog cover image as a BG if available --}}
  <header class="site-header outer">
      <div class="inner">
          <div class="site-header-content">
              <h1 class="site-title">
                  {{#if @blog.logo}}
                      <img class="site-logo" src="{{@blog.logo}}" alt="{{@blog.title}}" />
                  {{else}}
                      {{@blog.title}}
                  {{/if}}
              </h1>
              <h2 class="site-description">{{@blog.description}}</h2>
          </div>
          {{> "site-nav"}}
      </div>
  </header>

  {{!-- The main content area --}}
  <main id="site-main" class="site-main outer">
      <div class="inner">
          <div class="post-feed">
           

              {{!-- Other posts (not featured) --}}
              {{#get "posts" include="tags,author" page=pagination.page as |nonFeaturedPosts|}}
                  {{#foreach nonFeaturedPosts as |post|}}
                      {{> "post-card"}}
                  {{/foreach}}
              {{/get}}

          </div>
      </div>
  </main>

  </div>
</div>